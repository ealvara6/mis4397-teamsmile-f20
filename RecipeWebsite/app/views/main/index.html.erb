    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <% recipes = @recipes.sample(3) %>
    <div class="carousel-item active">
      <a href="recipes/<%= recipes[0].id %>"><img src=<%= recipes[0].image %> style="width:500px;height:500px;"</a>
    </div>
    <div class="carousel-item">
      <a href="recipes/<%= recipes[1].id %>"><img src=<%= recipes[1].image %> style="width:500px;height:500px;"</a>
    </div>
    <div class="carousel-item">
      <a href="recipes/<%= recipes[2].id %>"><img src=<%= recipes[2].image %> style="width:500px;height:500px;"</a>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
