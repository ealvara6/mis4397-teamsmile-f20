
    <!-- Image and text -->
    <div class="container">
      <div class="row recipe-items">
      <% @recipes.each do |recipe| %>
        <div class="recipe-item  col-md-4">
          <div class="card-deck card-text">
              <div class="card">
                  <img src="<%= recipe.image %>" class="card-img-top">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-center"><%= recipe.name %></h5>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-5">
                      <img src=<%= asset_path('timer.png') %>>
                      <%= recipe.time %> Min.
                    </div>
                    <div class="col-7">
                      <img src=<%= asset_path('yield.png') %>>
                      <%= recipe.yield %>
                    </div>
                  </div>
                  <a href="/recipes/<%= recipe.id %>" class="btn btn-primary text-white">Show Recipe</a>
              </div>
          </div>
        </div>
       <% end %>
      </div>
    </div>