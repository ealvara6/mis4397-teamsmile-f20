<p id="notice"><%= notice %></p>

<h1>Lunches</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Total time</th>
      <th>Yields</th>
      <th>Ingredients</th>
      <th>Instructions</th>
      <th>Image</th>
      <th>Host</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunches.each do |lunch| %>
      <tr>
        <td><%= lunch.title %></td>
        <td><%= lunch.total_time %></td>
        <td><%= lunch.yields %></td>
        <td><%= lunch.ingredients %></td>
        <td><%= lunch.instructions %></td>
        <td><%= lunch.image %></td>
        <td><%= lunch.host %></td>
        <td><%= link_to 'Show', lunch %></td>
        <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
        <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

