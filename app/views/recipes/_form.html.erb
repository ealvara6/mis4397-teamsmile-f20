<%= form_for(recipe) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :types %>
    <%= f.text_field :types %>
  </div>

  <div class="field">
    <%= f.label :restrictions %>
    <%= f.text_field :restrictions %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.number_field :time %>
  </div>

  <div class="field">
    <%= f.label :yield %>
    <%= f.text_field :yield %>
  </div>

  <div class="field">
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
  </div>

  <div class="field">
    <%= f.label :instructions %>
    <%= f.text_field :instructions %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>

  <div class="field">
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>

  <div class="field">
    <%= f.label :make %>
    <%= f.text_field :make %>
  </div>

  <div class="field">
    <%= f.label :make_by %>
    <%= f.text_field :make_by %>
  </div>

  <div class="actions">
    <%= f.submit "Update Recipe", class: "btn btn-primary" %>
  </div>
<% end %>
