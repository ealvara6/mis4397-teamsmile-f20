<%= form_for(recipe) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "What is the name of this recipe?" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :types, "What type of meal does this recipe create?" %>
    <%= f.text_field :types, class:"custom-select"%>
      <option value=""></option>
      <option value="br">Breakfast</option>
      <option value="ln">Lunch</option>
      <option value="dn">Dinner</option>
      <option value="sn">Snack</option>
      <option value="ds">Dessert</option>
  </div>

  <div class="form-group">
    <%= f.label :restrictions,"Are there any dietary restrictions this recipe satisfies?" %>
    <%= f.text_field :restrictions, class:"custom-select"%>
      <option value="XX">None</option>
      <option value="VT">Vegetarian</option>
      <option value="V">Vegan</option>
      <option value="DF">Dairy Free</option>
      <option value="GF">Gluten Free</option>
  </div>

  <div class="form-group">
    <%= f.label :time,"How long dos this recipe take to make in minutes?" %>
    <%= f.number_field :time, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :yield, "How many servings does this recipe produce?" %>
    <%= f.text_field :yield, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :ingredients,"What are the ingredients?
    Please use this format: Amount Ingredient, Amount Ingredient..." %>
    <%= f.text_field :ingredients, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :instructions,"What are the instructions for this recipe? Please separate each step with a period." %>
    <%= f.text_field :instructions, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :image,"Please paste a link to an image of the recipe here." %>
    <%= f.text_field :image, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :link,"If you have found this recipe from another website, please link it here." %>
    <%= f.text_field :link, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :blurb,"Please add a short story or little blurb about your recipe here." %>
    <%= f.text_field :blurb, class:"form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Add Recipe", class: "btn btn-info" %>
  </div>
<% end %>
